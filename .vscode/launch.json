{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Next.js: Dev Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "env": { "NODE_OPTIONS": "--inspect=9229" },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "pwa-node",
      "request": "attach",
      "name": "Attach to Next.js Server",
      "port": 9229,
      "restart": true
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Chrome: Debug Frontend",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack://_N_E/./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/src/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Next.js (Chrome)",
      "configurations": [
        "Next.js: Dev Server",
        "Attach to Next.js Server",
        "Chrome: Debug Frontend"
      ]
    }
  ]
}